---
import About from "@/components/About/About.astro";
import Footer from "@/components/Footer/Footer.astro";
import Hero from "@/components/Hero/Hero.astro";
import Nav from "@/components/Nav/Nav.astro";
import Projects from "@/components/Projects/Projects.astro";
import Tech from "@/components/Tech/Tech.astro";
import Layout from "@/layouts/Layout.astro";
import MaxWidthWrapper from "@/layouts/MaxWidthWrapper.astro";
import "@/styles/globals.css";
---

<Layout title="Kareem Ebrahim">
  <Nav />
  <main class="h-full w-full flex flex-col items-center">
    <Hero />
    <MaxWidthWrapper
      class="space-y-[150px] md:space-y-[230px] lg:space-y-[300px] mt-[200px] md:mt-[300px] lg:mt-[500px]"
    >
      <About />
      <Tech />
      <Projects />
    </MaxWidthWrapper>
    <Footer />
  </main>
</Layout>
