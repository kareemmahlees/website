---
import CVDropdown from "./cv-dropdown";

import astronaut from "@/assets/astronaut.svg";
import astronautMobile from "@/assets/astronaut_mobile.svg";
import saturn from "@/assets/saturn_mobile.svg";
import { Image } from "astro:assets";
---

<header
  class="relative w-full lg:h-screen mt-28 lg:flex lg:items-start lg:mt-56 lg:justify-between lg:gap-7"
>
  <Image
    class="hidden lg:block"
    alt="img"
    src={saturn}
    aria-hidden
    width={350}
    height={220}
  />

  <div class="flex items-center flex-col">
    <div class="font-[SugarpunchDemo] space-y-5 flex flex-col items-center">
      <h3 class="text-2xl lg:text-3xl">hi , i&apos;m</h3>
      <h1 class="text-7xl tracking-wider lg:text-8xl">Kareem</h1>
      <h1 class="text-7xl tracking-wider lg:text-8xl">Ebrahim</h1>
    </div>
    <div class="flex flex-col items-center gap-y-10">
      <p class="font-semibold mt-7 text-xl capitalize text-center">
        backend engineer
      </p>

      <CVDropdown client:load />
      <div class="flex items-center gap-5">
        <a href={"https://github.com/kareemmahlees"} target="_blank">
          <Image
            alt="github icon"
            src={"https://img.icons8.com/glyph-neue/128/EBEBEB/github.png"}
            width={35}
            height={35}
          />
        </a>
        <a href={"https://www.linkedin.com/in/kareem-ebrahim"} target="_blank">
          <Image
            alt="linkedin icon"
            src={"https://img.icons8.com/ios-filled/100/EBEBEB/linkedin.png"}
            width={35}
            height={35}
          />
        </a>
        <a href={"https://medium.com/@kareemmahlees"} target="_blank">
          <Image
            alt="medium icon"
            src={"https://img.icons8.com/ios-filled/100/EBEBEB/medium-logo.png"}
            width={35}
            height={35}
          />
        </a>
      </div>
    </div>
  </div>
  <div
    class="md:hidden flex flex-col items-center mt-10 group hover:cursor-pointer lg:mb-6"
  >
  </div>
  <div
    class="mt-20 flex flex-col -space-y-36 md:flex-row md:justify-between lg:hidden"
  >
    <Image alt="img" aria-hidden src={saturn} width={280} height={150} />
    <Image
      aria-hidden
      class="self-end"
      alt="img"
      src={astronautMobile}
      width={230}
      height={310}
    />
  </div>
  <Image
    aria-hidden
    alt="img"
    src={astronaut}
    width={380}
    height={460}
    class="hidden lg:block"
  />
</header>
