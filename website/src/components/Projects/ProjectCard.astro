---
import { type IconType } from "@icons-pack/react-simple-icons";
interface Props {
  techIcons: IconType[];
  socialIcons: { link: string; Icon: IconType }[];
  projectName: string;
  reversed?: boolean;
}

const { techIcons, socialIcons, projectName, reversed = false } = Astro.props;
---

<article
  id="projects"
  class:list={[
    "bg-secondary/40 w-full md:flex rounded-xl relative",
    { "md:flex-row-reverse": reversed },
  ]}
>
  <div
    class="md:min-w-[40%] bg-primary rounded-xl flex items-center justify-center py-10 md:py-0"
  >
    <h3 class="text-gray-500 font-bold text-4xl break-all">
      {projectName}
    </h3>
  </div>
  <div class="rounded-xl relative -top-5 pt-10 space-y-5 px-4 py-4 md:-top-0">
    <p class="text-center"><slot /></p>
    <div class="flex items-center gap-4 justify-center">
      {techIcons.map((Icon) => <Icon />)}
    </div>
    <div class="flex justify-center items-center gap-4">
      {
        socialIcons.map(({ Icon, link }) => (
          <a href={link}>
            <Icon />
          </a>
        ))
      }
    </div>
  </div>
</article>
